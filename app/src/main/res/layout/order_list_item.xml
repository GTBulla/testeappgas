<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_element"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_item_count"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_radius"
        android:backgroundTint="@color/gray200"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:textAlignment="center"
        android:textColor="@color/gray600"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/item_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/gray900"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/text_item_count"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/item_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_radius"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="@sample/item_company_name"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@sample/item_company_colors" />

</androidx.constraintlayout.widget.ConstraintLayout>